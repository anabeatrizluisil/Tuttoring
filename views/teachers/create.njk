{% extends "layout.njk"%}
    {% block content %}
        <form class="card" method="POST" action="/teachers">
                <div class="avatar" style="background: url('https://source.unsplash.com/collection/8360382/1600x900') no-repeat center center / cover; border-radius: 4rem  0 0 4rem"></div>
                <div class="details">
                    <h3>DETALHES</h3>

                    <div class="item">
                        <div>Avatar URL</div>
                        <div>
                            <input type="url" name="avatar_url" placeholder="http://">
                        </div>
                    </div>

                    <div class="item">
                        <div>Nome Completo</div>
                        <div>
                            <input type="text" name="name" >
                        </div>
                    </div>

                    <div class="item">
                        <div>Data de nascimento</div>
                        <div>
                            <input type="date" name="birth">
                        </div>
                    </div>

                    <div class="item">
                        <div>Grau de escolaridade</div>
                        <div>
                            <select name="select">
                                <option value="em_completo">Ensino Médio Completo</option>
                                <option value="es_completo">Ensino Superior Completo</option>
                                <option value="mestrado">Mestrado</option>
                                <option value="doutorado">Doutorado</option>
                            </select>
                        </div>
                    </div>

                    <div class="item">
                        <div>Tipo de Aula</div>
                        <div>
                            <input type="radio" name="presencial">Presencial
                            <input type="radio" name="distancia" >À distância
                        </div>
                    </div>

                    <div class="item">
                        <div>Área de atuação</div>
                        <div>
                            <input type="text" name="field">
                        </div>
                    </div>
                    
                </div>
        </form>
        
    {% endblock %}
   
