{% extends "layout.njk"%}

{% block content %}

    <div class="card">
        <div class="avatar" style="background: url('https://source.unsplash.com/collection/8360382/1600x900') no-repeat center center / cover; border-radius: 4rem  0 0 4rem"></div>
        <div class="details">
            <form method="POST" action="/teachers?_method=PUT">                
                <h3>Editar Professor</h3>

                {% include 'teachers/fields.njk' %}

                <input type="hidden" name="id" value={{ teacher.id }}>                        
            </form>

            <form id="form-delete" action="/teachers?_method=DELETE" method="post">
                <input type="hidden" name="id" value={{ teacher.id }}>
                <button type="submit">Deletar</button>
            </form>

        </div> 
    </div>

        
        
{% endblock %}