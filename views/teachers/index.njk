{% extends "layout.njk"%}
    {% block content %}
        <div class="card table-container">
            <a href="/teachers/create" class="new">Novo</a>
            <table width="100%">
                <thead>
                    <tr>
                        <th>Nome Completo</th>
                        <th>Acompanhamento</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ teacher.avatar_url}})"></span>
                            {{ teacher.name }}</td>
                        <td>
                            <span>{{ teacher.field }}</span>
                        </td>
                        <td>
                            <a href="/teachers/{{ teacher.id }}">
                                <span class="material-icons">
                                    visibility
                                </span>
                            </a>
                            <a href="/teachers/{{ teacher.id }}/edit">
                                <span class="material-icons">
                                    edit
                                </span>
                            </a>
                        </td>

                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>     
    {% endblock %}
   
