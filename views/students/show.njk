{% extends "layout.njk"%}
    {% block content %}
        <div class="card">
                <div class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></div>
                <div class="details">
                    <h3>DETALHES</h3>

                    <div class="item">
                        <div>Nome completo</div>
                        <div>{{ student.name }}</div>
                    </div>

                    <div class="item">
                        <div>Idade</div>
                        <div>{{ student.birth }}</div>
                    </div>

                    <div class="item">
                        <div>Email</div>
                        <div>{{ student.email }}</div>
                    </div>

                    <div class="item">
                        <div>Ano Escolar</div>
                        <div><span>{{ student.school_year }}</span></div>
                    </div>

                    <div class="item">
                        <div>Carga hor√°ria semanal</div>
                        <div>
                            <span>{{ student.workload }}</span>
                        </div>
                    </div>

                    
                    <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
                </div>
        </div>     
    {% endblock %}