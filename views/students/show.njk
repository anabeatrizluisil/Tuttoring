{% extends "layout.njk"%}
    {% block content %}
        <div class="card">
                <div class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></div>
                <div class="details">
                    <h3>DETALHES</h3>

                    <div class="item">
                        <div>Nome completo</div>
                        <div>{{ teacher.name }}</div>
                    </div>

                    <div class="item">
                        <div>Idade</div>
                        <div>{{ teacher.age }}</div>
                    </div>

                    <div class="item">
                        <div>Grau de escolaridade</div>
                        <div>{{ teacher.select }}</div>
                    </div>

                    <div class="item">
                        <div>Tipo de aula</div>
                        <div><span>{{ teacher.type }}</span></div>
                    </div>

                    <div class="item">
                        <div>Acompanhamento</div>
                        <div>
                            {% for acompanhamento in teacher.field %}
                                <span>{{ acompanhamento }}</span>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="item">
                        <div>Desde</div>
                        <div>{{ teacher.created_at }}</div>
                    </div>
                    
                    <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
                </div>
        </div>     
    {% endblock %}